<wbdevice author="M. Kreider" version="0.0.1">
   
   <clockdomain name="sys"></clockdomain>
   <clockdomain name="ref"></clockdomain>
   <clockdomain name="aux"></clockdomain>
    
   <slaveinterface name="data" data="32" type="pipelined" pages="4">          
      <sdb vendorID="GSI" productID="0x78412212" version="1" date="auto" name="Complex slave Data"></sdb>
      <registers>
           <reg   name="SEMA"       read="yes"  write="yes"                   reset="0xDEADBEEF"                                          comment="Semaphore word register"></reg>
           <reg   name="CH_SEL"     read="yes"  write="yes" mask="2"          selector="yes" weflag="yes" address="0x20"                  comment="Channel select register"></reg>
           <reg   clockdomain="ref" name="CLEAR_FIFO"             write="yes" mask="1"          paged="yes"    autostall='yes' pulse='yes' address="0x100"  comment="Clears Fifo"></reg>
           <reg   clockdomain="ref" name="POP_FIFO"               write="yes" mask="1"          paged="yes"    pulse='yes'                                  comment="Pop Fifo"></reg>
           <reg   clockdomain="ref" name="FIFO_OUT"   read="yes"              mask="0xffffffff" paged="yes"                                                 comment="Timestamp fifo"></reg>
           <reg   clockdomain="ref" name="SPACE_LEFT" read="yes"              mask="0xffff"     paged="yes"                                                 comment="Shows free memory space"></reg>
      </registers>
   </slaveinterface>
   
   <slaveinterface name="ctrl" data="32" type="pipelined">          
      <sdb vendorID="GSI" productID="0x44415281" version="1" date="auto" name="Complex slave Ctrl"></sdb>
      <registers>
           <reg   name="STATUS"     read="yes"              mask="36"                           comment="b35-b0: status bits"></reg>
           <reg   name="CMD"                    write="yes" mask="0xffff"                       comment="Command word"></reg>
           <reg   name="FLAGS"      read="yes"  write="yes" mask="0b11111"   access="atomic"    comment="Individually controllable flag bits"></reg>
           <reg   clockdomain="ref" name="MSG_CNT_R"  read="yes"  mask="0xfff" comment="Message counter from tx path"></reg>
           <reg   clockdomain="aux" name="MSG_CNT_A"  read="yes"  mask="0xfff" comment="Message counter from monitor core"></reg>
      </registers>
   </slaveinterface>

</wbdevice>
